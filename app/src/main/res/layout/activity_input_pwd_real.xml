<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_pwd_1"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/backspace" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/scdream3"
            android:gravity="center"
            android:text="비밀번호를 입력하세요"
            android:textColor="@color/fontColor"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_circle_1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/password_yet" />

        <ImageView
            android:id="@+id/iv_circle_2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/password_yet" />

        <ImageView
            android:id="@+id/iv_circle_3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/password_yet" />

        <ImageView
            android:id="@+id/iv_circle_4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/password_yet" />

        <ImageView
            android:id="@+id/iv_circle_5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/password_yet" />

        <ImageView
            android:id="@+id/iv_circle_6"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/password_yet" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="5.6"
        android:gravity="right"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:fontFamily="@font/scdream3"
                android:text="1"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:fontFamily="@font/scdream3"
                android:text="2"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scdream3"
                android:text="3"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:fontFamily="@font/scdream3"
                android:text="4"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:fontFamily="@font/scdream3"
                android:text="5"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scdream3"
                android:text="6"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:fontFamily="@font/scdream3"
                android:text="7"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:fontFamily="@font/scdream3"
                android:text="8"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scdream3"
                android:text="9"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="85dp"
                android:fontFamily="@font/scdream3"
                android:text="7"
                android:textColor="#00000000"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="77dp"
                android:fontFamily="@font/scdream3"
                android:text="0"
                android:textColor="@color/fontColor"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/iv_backspace"
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/pwd_backspace" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
