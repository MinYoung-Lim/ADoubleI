<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/firstline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FBFAFA"
                app:srcCompat="@drawable/backspace"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/passwordscan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scdream3"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:paddingTop="100dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="비밀번호를 입력하세요."
                android:textColor="#838383"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="162dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="110dp"
                android:paddingTop="40dp"
                android:paddingRight="40dp"
                android:paddingBottom="40dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_button"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/password_yet" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_button"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/password_yet" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_button"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/password_yet" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_button"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/password_yet" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_button"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/password_yet" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_button"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/password_yet" />
            </TableRow>

            <LinearLayout
                android:id="@+id/forbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/password1_backgroud">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <Button
                        android:id="@+id/number1"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="1"
                        android:textColor="#838383"
                        android:textSize="40dp" />


                    <Button
                        android:id="@+id/number2"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="2"
                        android:textColor="#838383"
                        android:textSize="40dp" />


                    <Button
                        android:id="@+id/number3"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="3"
                        android:textColor="#838383"
                        android:textSize="40dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <Button
                        android:id="@+id/number4"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="4"
                        android:textColor="#838383"
                        android:textSize="40dp" />

                    <Button
                        android:id="@+id/number5"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="5"
                        android:textColor="#838383"
                        android:textSize="40dp" />


                    <Button
                        android:id="@+id/number6"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="6"
                        android:textColor="#838383"
                        android:textSize="40dp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <Button
                        android:id="@+id/number7"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="7"
                        android:textColor="#838383"
                        android:textSize="40dp" />

                    <Button
                        android:id="@+id/number8"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="8"
                        android:textColor="#838383"
                        android:textSize="40dp" />

                    <Button
                        android:id="@+id/number9"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="9"
                        android:textColor="#838383"
                        android:textSize="40dp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    android:layout_width="match_parent"
                    android:layout_height="100dp">


                    <Button
                        android:id="@+id/btn_to_fingerprint"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text=""
                        android:textColor="#838383"
                        android:textSize="40dp"
                        tools:layout_editor_absoluteX="345dp"
                        tools:layout_editor_absoluteY="385dp" />

                    <Button
                        android:id="@+id/number0"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="0"
                        android:textColor="#838383"
                        android:textSize="40dp" />

                    <Button
                        android:id="@+id/backnumber"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:fontFamily="@font/scdream3"
                        android:maxWidth="480dp"
                        android:maxHeight="600dp"
                        android:scaleType="fitCenter"
                        android:text="&lt;"
                        android:textColor="#838383"
                        android:textSize="40dp" />


                </TableRow>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>